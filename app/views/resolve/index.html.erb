								<label for="{{questions.attributes.id}}4">4</label>
								<input name="group{{questions.attributes.id}}" type="radio" ng-model="response[questions.attributes.id]" id="{{questions.attributes.id}}5" value="5" />
								<label for="{{questions.attributes.id}}5">5</label>
							</p>
							<span ng-if="error[questions.attributes.id]">
								<code>Debe de responder esta pregunta</code>
							</span>
						</span>
						<span ng-if="questions.attributes.category == 4">
							<p>
								<input name="group{{questions.attributes.id}}" type="radio" ng-model="response[questions.attributes.id]" id="{{questions.attributes.id}}1" value="1" />
